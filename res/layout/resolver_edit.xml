<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/display_name" />
		<EditText android:id="@+id/display" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:singleLine="true" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/address" />
		<EditText android:id="@+id/address" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:singleLine="true" />
	</LinearLayout>


	<Button android:id="@+id/confirm" android:text="@string/confirm"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />

</LinearLayout>
